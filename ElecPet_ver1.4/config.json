{
  "pet": {
    "size": [200, 200], 
    "initial_pos": [400, 300],
    "move_speed": 300, 
    "timer_interval": 20, 
    "distance_threshold": 30,
    "original_gif": "./pet.gif", 
    "close_gif": "./close_pet.gif",
    "tray_icon": "./icon.png"
  },
  "remote_agent": {
    "api_url": "http://127.0.0.1:8005/chat", 
    "request_method": "POST",
    "timeout": 60, 
    "headers": {
      "Content-Type": "application/json"
    },
    "request_key": "prompt",  
    "history_key": "history", 
    "response_key": "data.response" 
  }
}